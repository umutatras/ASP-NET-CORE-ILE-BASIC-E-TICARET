@model IEnumerable<ETicaretBasic.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <p>
        <a asp-action="Create" class="btn btn-primary">Kategori Ekle</a>
    </p>
    <table id="myTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    Kategori Adı
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CategoryID" class="btn btn-success"><i class="bi bi-pencil-square"></i>Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@item.CategoryID" class="btn btn-danger"><i class="bi bi-trash"></i>Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>


</div>
@section Scripts{ 
    <script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').DataTable({
                language: {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
                }
            });
        });
    </script>
    }